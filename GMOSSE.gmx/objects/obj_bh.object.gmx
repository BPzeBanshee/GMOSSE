if !instance_exists(obj_bh_trace)
    {
    option1 = instance_create(x,y,option_t1);
    option1.position = 1;
    option1.direction = 90;
    option2 = instance_create(x,y,option_t2);
    option2.position = 2;
    option2.direction = 90;
    instance_create(x,y,obj_bh_trace);
    }
// image aesthetics
afterimage = -666;
image_timer += 1;
if image_timer &gt;= 5
    {
    thrust = scr_basicshot(x,y+10,obj_bh_thrust,4,270+random_range(-10,10));
    thrust.image_xscale = thrust_scale*2;
    thrust.image_yscale = thrust_scale*2;
    image_timer = 0;
    }

// shoot code

// I made this mainly as a test of spraying bullets my own way, but it
// can also be expanded upon. Speed, angle of the image, firing direction
// and playing of sounds is done through by passing variables and
// commands to the object created by the with {} function.

//button 1 (fire)

if (global.button1 = 1) 
    {
    if can_shoot = 1 
        {
        scr_playsnd(snd_bh_mainshot,1);
        shot = scr_basicshot(x,y,obj_bh_mainshot,20,90+shot_angle);
        shot.image_blend = obj_bh_orb.image_blend;

        if shot_angle_add = 1 then shot_angle += 1;
        if shot_angle_add = 0 then shot_angle -= 1;
        if shot_angle &gt; 3 || shot_angle &lt; -3
            {
            shot_angle = 0; 
            if shot_angle_add = 1 
            then shot_angle_add = 0 
            else shot_angle_add = 1;
            }
        can_shoot = 0;
        alarm[0] = 4;
        }
    if can_shoot2 = 1
        {
        with obj_bh_orb event_user(0);
        switch weapon
            {
            case 1: alarm[1]=5; break;
            case 2: alarm[1]=5; break;
            case 3: alarm[1]=6; break;
            case 4: alarm[1]=30; break;
            case 5: alarm[1]=5; break;
            case 6: alarm[1]=3; break;
            case 7: alarm[1]=20; break;
            }
        can_shoot2 = 0;
        }
    }

//button 3 (alternate fire while slowing down)
if(global.button3 = 1 &amp;&amp; can_speed = 1) 
    {
    can_speed = 0;
    if speed_up = 0 {speed_gear -= 1;} else speed_gear += 1;
    if speed_gear &gt; 4 {speed_up = 0; speed_gear -= 2;}
    if speed_gear &lt; 1 {speed_up = 1; speed_gear += 2;}
    switch speed_gear
        {
        case 1: global.shipspeed = 1; thrust_scale = 0.25; break;
        case 2: global.shipspeed = 3; thrust_scale = 0.5; break;
        case 3: global.shipspeed = 5; thrust_scale = 0.75; break;
        case 4: global.shipspeed = 7; thrust_scale = 1; break;
        }
    global.slowshipspeed = global.shipspeed; 
    global.diagspeed = global.shipspeed;
    global.sldiagspeed = global.shipspeed;
    }
if (!global.button3) then can_speed = 1;
